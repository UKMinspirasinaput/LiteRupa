<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.literupa">

    <!-- 1. IZIN PERANGKAT -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LiteRupa">

        <!-- MOVED AddressActivity INSIDE HERE -->
        <activity android:name=".AddressActivity" android:exported="false" />

        <!-- A. HALAMAN LOGIN (Launcher / Pintu Utama) -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- B. HALAMAN DAFTAR -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />

        <!-- C. HALAMAN UTAMA -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <!-- D. HALAMAN PROFIL -->
        <activity
            android:name=".AccountActivity"
            android:exported="false" />

        <!-- E. HALAMAN PENDUKUNG LAINNYA -->
        <activity android:name=".VerificationActivity" android:exported="false" />
        <activity android:name=".MapsActivity" android:exported="false" />
        <activity android:name=".TransactionActivity" android:exported="false" />
        <activity android:name=".ScanActivity" android:exported="false" />
        <activity android:name=".FavoriteActivity" android:exported="false" />
        <activity android:name=".CartActivity" android:exported="false" />
        <activity android:name=".SemuaProdukActivity" android:exported="false" />
        <activity android:name=".DetailActivity" android:exported="false" />

        <!-- API KEY GOOGLE MAPS -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="YOUR_API_KEY_HERE" />

    </application>
</manifest>

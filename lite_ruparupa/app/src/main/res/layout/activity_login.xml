<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_gradient_orange">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Logo -->
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/uh"
                android:background="@drawable/bg_status_green"
                android:padding="10dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LiteRupa"
                android:textSize="42sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Premium Academic Supplies"
                android:textColor="#FFFFFF"
                android:alpha="0.8"
                android:layout_marginBottom="40dp"/>

            <!-- Card Login -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="35dp"
                app:cardElevation="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome Back"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_marginBottom="25dp"/>

                    <!-- INPUT NOMOR HP (TAMBAHAN BIAR NGGAK ERROR) -->
                    <EditText
                        android:id="@+id/etPhone"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:hint="Nomor Handphone (Untuk OTP)"
                        android:inputType="phone"
                        android:background="@drawable/bg_input_login"
                        android:paddingHorizontal="20dp"
                        android:layout_marginBottom="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ATAU MASUK DENGAN EMAIL"
                        android:textSize="10sp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:textColor="#9E9E9E"/>

                    <!-- Input Email -->
                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:background="@drawable/bg_input_login"
                        android:paddingHorizontal="20dp"
                        android:layout_marginBottom="15dp"/>

                    <!-- Input Password -->
                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:background="@drawable/bg_input_login"
                        android:paddingHorizontal="20dp"
                        android:layout_marginBottom="25dp"/>

                    <!-- Button Login (Kirim OTP / Login Email) -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnLogin"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:text="MASUK / KIRIM OTP"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:background="@drawable/bg_status_green"
                        android:backgroundTint="#E65100"
                        android:layout_marginBottom="20dp"/>

                    <!-- Google Login -->
                    <LinearLayout
                        android:id="@+id/btnGoogleLogin"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@drawable/bg_input_login"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Google Account"
                            android:textStyle="bold"
                            android:textColor="#616161"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Link Daftar -->
            <TextView
                android:id="@+id/tvDaftarSekarang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belum punya akun? Daftar Sekarang"
                android:textColor="#E65100"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:padding="10dp"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FAFAFA">

    <!-- Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alamat Pengiriman"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#E65100"
        android:layout_marginBottom="20dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat Lengkap"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <!-- INPUT ALAMAT (ID harus etAlamatLengkap) -->
            <EditText
                android:id="@+id/etAlamatLengkap"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:hint="Masukkan alamat lengkap rumah/kantor kamu..."
                android:gravity="top"
                android:background="@drawable/bg_input_login"
                android:padding="12dp"
                android:inputType="textMultiLine" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- TOMBOL SIMPAN (ID harus btnSimpanAlamat) -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSimpanAlamat"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:text="SIMPAN ALAMAT"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:backgroundTint="#E65100"
        android:background="@drawable/bg_status_green" />

</LinearLayout>

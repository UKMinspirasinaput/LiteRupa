<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_menu"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:src="@android:drawable/ic_menu_search"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Login dengan Google"
        android:textSize="12sp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Pilih login untuk LiteRupa"
        android:textSize="22sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <!-- AKUN 1 -->
    <LinearLayout
        android:id="@+id/account1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_grey_btn"
        android:padding="15dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:text="P"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_marginEnd="15dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="putriyana.12345@gmail.com"
                android:textColor="#000000"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Putriyana Nur Aisyah"
                android:textSize="11sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- AKUN 2 -->
    <LinearLayout
        android:id="@+id/account2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_grey_btn"
        android:padding="15dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:text="B"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_marginEnd="15dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="babsnsddnndnd@gmail.com"
                android:textColor="#000000"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Babsns ddnndnd"
                android:textSize="11sp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/btnOpsiLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Batal / Opsi login"
        android:textColor="#4285F4"
        android:padding="10dp"/>
</LinearLayout>

                        <TextView android:id="@+id/txt19" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@id/img19" android:layout_marginTop="8dp" android:text="Hiasan" android:textStyle="bold" />
                        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@id/txt19" android:text="Rp35.000" android:textColor="#F26522" android:textStyle="bold" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Produk 20 - Box Kotak -->
                <androidx.cardview.widget.CardView android:id="@+id/cardProduk20" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:layout_margin="6dp" app:cardCornerRadius="12dp" app:cardElevation="2dp">
                    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="10dp">

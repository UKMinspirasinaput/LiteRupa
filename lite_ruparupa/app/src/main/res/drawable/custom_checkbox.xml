<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Saat Dicentang: Lingkaran Oranye dengan Centang -->
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="#F26522" />
                    <size android:width="24dp" android:height="24dp" />
                </shape>
            </item>
            <item android:drawable="@android:drawable/checkbox_on_background" android:top="4dp" android:bottom="4dp" android:left="4dp" android:right="4dp" />
        </layer-list>
    </item>

    <!-- Saat TIDAK Dicentang: Lingkaran Abu-abu Tipis -->
    <item android:state_checked="false">
        <shape android:shape="oval">
            <stroke android:width="2dp" android:color="#BDBDBD" />
            <solid android:color="#FFFFFF" />
            <size android:width="24dp" android:height="24dp" />
        </shape>
    </item>
</selector>
